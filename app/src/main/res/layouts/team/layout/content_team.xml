<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".Activities.TeamActivity"
    tools:showIn="@layout/activity_team">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <!--    Record    -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_card"
            android:gravity="center_horizontal"
            android:padding="22dp"
            android:text="Record\n\n"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

        <!--    Next Game    -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_card"
            android:gravity="center_horizontal"
            android:padding="22dp"
            android:text="Next Game\n\n"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

        <!--    divider    -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/colorText" />

        <!--    owner    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round_card"
            android:padding="22dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:contentDescription="owner image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Owner Dan"
                android:textColor="@color/colorText"
                android:textSize="24dp"/>

        </LinearLayout>

        <!-- list of teams-->
        <com.zizzle.cmpt370.NonScrollableListView
            android:id="@+id/members_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:divider="@null" />

    </LinearLayout>
</ScrollView>