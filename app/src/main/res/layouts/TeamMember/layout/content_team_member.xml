<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:paddingHorizontal="15dp"
    android:scrollbars="none"
    tools:context=".Activities.TeamMemberActivity"
    tools:showIn="@layout/activity_profile">

    <!--    Display Name    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

        <!--    divider    -->
        <View
            android:id="@+id/members_name_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorText"
            android:visibility="visible" />

        <TextView
            android:id="@+id/TeamMember_DisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_card"
            android:gravity="center_horizontal"
            android:padding="22dp"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="24sp" />

    </LinearLayout>


    <!--    Email    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

        <!--    divider    -->
        <View
            android:id="@+id/members_email_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorText"
            android:visibility="visible" />

        <TextView
            android:id="@+id/TeamMember_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_card"
            android:gravity="center_horizontal"
            android:padding="22dp"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="24sp" />

    </LinearLayout>

    <!--    Phone Number    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Phone Number"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

        <!--    divider    -->
        <View
            android:id="@+id/members_phone_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorText"
            android:visibility="visible" />

        <TextView
            android:id="@+id/TeamMember_PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_card"
            android:gravity="center_horizontal"
            android:padding="22dp"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="24sp" />

    </LinearLayout>

    <!--    divider    -->
    <View
        android:id="@+id/remove_player_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorText"
        android:visibility="gone" />

    <!--    remove player button    -->
    <Button
        android:id="@+id/remove_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/ic_warning"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_card_important_button"
        android:padding="22dp"
        android:text="  Remove Player"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:visibility="gone" />

</LinearLayout>