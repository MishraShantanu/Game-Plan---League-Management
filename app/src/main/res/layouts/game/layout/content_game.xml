<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".Activities.GameActivity"
    tools:showIn="@layout/activity_game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Add the Game Score"
            android:textColor="@color/colorText"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Your Team"
            android:textAlignment="textStart"
            android:textColor="@color/colorText"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/yourScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/colorTextHint"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Opponent Team"
            android:textAlignment="textStart"
            android:textColor="@color/colorText"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/opponentScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/colorTextHint"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint" />

        <!--    Submit Button    -->
        <Button
            android:id="@+id/submitScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/submitColor"
            android:text="Submit"
            android:textColor="@color/colorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Game Details:"
            android:textColor="@color/colorText"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/yourTeamNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your Team: "
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/opponentTeamNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Opponent Team: "
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/gameDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Date: "
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/gameTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Time: "
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="22sp" />


    </LinearLayout>

</ScrollView>