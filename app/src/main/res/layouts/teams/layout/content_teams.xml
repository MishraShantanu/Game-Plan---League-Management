<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".Activities.TeamsActivity"
    tools:showIn="@layout/activity_teams">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- search bar-->
        <EditText
            android:id="@+id/teams_search_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/round_search"
            android:hint="Search teams"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:singleLine="true" />

        <!--    Description Title    -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingHorizontal="22dp"
            android:paddingTop="16dp"
            android:text="Description"
            android:textAlignment="textStart"
            android:textColor="@color/colorText"
            android:textSize="26sp" />

        <!--    divider    -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorText" />

        <!--    League Description    -->
        <TextView
            android:id="@+id/league_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/round_card"
            android:padding="22dp"
            android:text="decription"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <!--    Teams Title    -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingHorizontal="22dp"
            android:paddingTop="18dp"
            android:text="Teams"
            android:textAlignment="textStart"
            android:textColor="@color/colorText"
            android:textSize="26sp" />

        <!--    divider    -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorText" />

        <!--    No Team Text    -->
        <TextView
            android:id="@+id/no_teams_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:padding="14dp"
            android:text="There are no teams\n\nCreate the first with the plus icon in the bottom"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

        <!-- list of teams-->
        <com.zizzle.cmpt370.NonScrollableListView
            android:id="@+id/teams_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:padding="15dp" />

        <!--    remove league button    -->
        <Button
            android:id="@+id/remove_league_button"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginHorizontal="22dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_card_important_button"
            android:drawableStart="@drawable/ic_warning"
            android:padding="22dp"
            android:text="Remove League"
            android:textColor="@color/colorText"
            android:textSize="24dp"
            android:textStyle="normal" />

    </LinearLayout>
</ScrollView>