        android:left="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"/>
            <corners android:radius="10dp" />
        </shape>
    </item>


    <item android:bottom="8dp"
          android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>